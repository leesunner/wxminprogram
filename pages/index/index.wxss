/**index.wxss**/
.container{
  background-color: #F5F5F5;
  position: relative;
}
.banner {
  height: 340rpx;
  width: 100%;
}
.banner_box{
  position: relative;
  height: inherit;
}
.list {
  padding: 29rpx 26rpx 0 26rpx;
}
.morenewsitem{
  display: flex;
  align-items: center;
  justify-content: space-between;
  flex-flow: nowrap row;
}
.morenewsitem_left{
  width: 49%;
}
.morenewsitem_right{
  width: 49%;
}
.deleteDrag{
  background-color: rgba(0, 0, 0, 0.25);
  width: 100%;
  height: 100%;
  position: fixed;
  z-index: 999;
  top: 0;
  left: 0;
}
.deleteDrag_box{
  margin: 50% 20rpx 0 20rpx;
  background-color: #ffffff;
  padding:35rpx 49rpx 56rpx 49rpx;
}
.flex{
  display: flex;
  align-items: center;
  justify-content: space-between;
  flex-flow: nowrap row;
}
.deleteDrag_box_title{
  margin-bottom: 58rpx;
}
.deleteDrag_box_title text{
  color: #666666;
  font-size: 24rpx;
}
.deleteDrag_box_title view{
  width: 220rpx;
  height: 60rpx;
  color: #ffffff;
  background-color: #FF7E00;
  text-align: center;
  line-height: 60rpx;
  border-radius: 30rpx;
  font-size: 30rpx;
}
.deleteDrag_box_item{
  flex-flow: wrap row;
}
.deleteDrag_box_item view{
  width: 220rpx;
  height: 50rpx;
  color: #B3B3B3;
  border: solid 1rpx #B3B3B3;
  text-align: center;
  line-height: 50rpx;
  border-radius: 25rpx;
  font-size: 28rpx;
}
.deleteDrag_box_item .chooseItem{
  color: #ffffff;
  background-color: #FF7E00;
  border: solid 1rpx #FF7E00;
}
.re_text{
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index:10;
}
.re_title{
  font-size: 36rpx;
  text-align: center;
  margin-bottom: 28rpx;
  margin-top: 41rpx;
}
.re_content{
  font-size: 30rpx;
  text-align: center;
}